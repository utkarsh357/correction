#include <bits/stdc++.h> 
vector<int> findSpans(vector<int> &price) {
    // Write your code here.
  ??ery  
    stack<int>s;
    vector<int>arr;
    s.push(-1);
    for(int i=0;i<price.size();i++)
    {
       // cout<<"top "<<s.top()<<endl;
    //    cout<<"i "<<i<<endl;
        if(s.top()==-1)
            arr.push_back(1);
        else if(price[s.top()]>price[i])
        {
          //  cout<<"b"<<endl;
            arr.push_back(i-s.top());
        }
        else if(price[s.top()]<=price[i])
        {
        //    cout<<"c"<<endl;
            while(s.top()!=-1&&price[s.top()]<=price[i])
            {
                s.pop();
            }
         //    cout<<"top "<<s.top()<<endl;
            if(s.top()==-1)
            {
               // cout<<"i "<<i<<endl;
                arr.push_back(i+1);
            }
            else
                arr.push_back(i-s.top());
                
        }
        
      //  cout<<"ar "<<arr[arr.size()-1]<<endl;
        s.push(i);
    }
    
    return arr;
    
}
